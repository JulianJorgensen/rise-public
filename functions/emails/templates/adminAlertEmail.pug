extends layout.pug

block content
  tr
    td.alert(class='alert-primary') #{title}
  tr
    td.content-wrap
      table(width='100%', cellpadding='0', cellspacing='0')
        tr
          td.content-block #{message}
        tr
          td.content-block
            table(width='100%', cellpadding='0', cellspacing='0')
              tr
                td First name:
                td #{firstName}
              tr
                td Last name:
                td #{lastName}
              tr
                td Email:
                td #{email}
